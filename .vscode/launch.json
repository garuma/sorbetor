    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch LSP server",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/sorbetor",
            "args": ["--socket=8876"],
            "useBundler": true
        },
        {
            "name": "Debug Tests",
            "type": "Ruby",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "includes": ["test", "lib"],
            "showDebuggerOutput": true,
            "useBundler": true,
        }
    ]
}